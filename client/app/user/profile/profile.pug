.hbox.hbox-auto-xs.hbox-auto-sm
  .col
    // main header
    .bg-light.lter.b-b.wrapper-md
      .row
        .col-sm-6.col-xs-12
          h1.m-n.font-thin.h3.text-black {{$ctrl.stateParams.id ? 'User' : 'Profile' }} Details
          a(ui-sref='user.edit($ctrl.stateParams)')
            span.m-r.fa.fa-pencil-square-o
            | Edit Details
      .panel.panel-default.m-t-sm
        .panel-body
          .col-md-8
            .panel
              .panel-heading
                form.form(ng-submit='$ctrl.submit()' name='addUser')
                  .row.m-t-xs
                    .col-xs-3 Name
                    .col-xs-1 :
                    .col-xs-8(ng-bind='$ctrl.user.name')
                  .row.m-t-xs
                    .col-xs-3 Mobile
                    .col-xs-1 :
                    .col-xs-8 +{{$ctrl.user.mobile}}
                  .row.m-t-xs
                    .col-xs-3 Email
                    .col-xs-1 :
                    .col-xs-8(ng-bind='$ctrl.user.email')
                  .row.m-t-xs
                    .wrapper Support
                  .row.m-t-xs
                    .col-xs-3 Company
                    .col-xs-1 :
                    .col-xs-8(ng-bind='$ctrl.user.name')
                  .row.m-t-xs
                    .col-xs-3 Name
                    .col-xs-1 :
                    .col-xs-8(ng-bind='$ctrl.user.supportName')
                  .row.m-t-xs
                    .col-xs-3 Mobile
                    .col-xs-1 :
                    .col-xs-8 +{{$ctrl.user.supportMobile}}
                  .row.m-t-xs
                    .col-xs-3 Email
                    .col-xs-1 :
                    .col-xs-8(ng-bind='$ctrl.user.supportEmail')
                  .row.m-t-xs
                    .col-xs-3 Login URL
                    .col-xs-1 :
                    .col-xs-8(ng-bind='$ctrl.user.loginUrl')
